<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meetup Details</title>
  <link href="/css/app.css" rel="stylesheet">
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">{{ meetup.title }}</h1>
    <p><strong>Description:</strong> {{ meetup.description }}</p>
    <p><strong>Address:</strong> {{ meetup.adress }}</p>
    <p><strong>Additional Address:</strong> {{ meetup.additionalAddress }}</p>
    <p><strong>City:</strong> {{ meetup.city }}</p>
    <p><strong>Type:</strong> {{ meetup.type }}</p>
    <p><strong>Date and Time:</strong> {{ formattedDate }}</p>
    <p><strong>Organizer:</strong> {{ meetup.organizer }}</p>

    <div class="w-full lg:w-1/2">
      <h3 class="font-bold text-lg">Pets participants</h3>
      <dl>
        @each(pet in meetupPets)
          <div class="flex items-baseline gap-2">
            <dt>{{ pet.name }}</dt>
            <input type="hidden" value="{{ pet.$extras.pivot_sort_order }}">
          </div>
        @end
      </dl>
    </div>

    <div class="w-full lg:w-1/2"> 
      <h3 class="font-bold text-lg">Participants</h3>
      <dl>
        @each(user in meetupUsers)
          <div class="flex items-baseline gap-2">
            <dt>{{ user.username }}</dt>
            <input type="hidden" value="{{ user.$extras.pivot_sort_order }}">
          </div>
        @end
      </dl>
      <div class="mt-4">
        @if(meetupUsers.some(meetupUser => meetupUser.id === auth.user.id))
          <div class="space-y-4">
            <form action="{{ route('joinMeetup', { id: meetup.id }) }}" method="POST" class="space-y-4">
              {{ csrfField() }}
              
              <div class="mb-4">
                <label class="block text-gray-700 mb-2">Add other pet :</label>
                <div class="space-y-2 border p-4 rounded-md">
                  @if(connectUserPet && connectUserPet.length > 0)
                    @each(pet in connectUserPet.filter(p => !meetupPets.some(mp => mp.id === p.id)))
                      <div class="flex items-center">
                        <input 
                          type="checkbox" 
                          id="pet-{{ pet.id }}" 
                          name="petIds[]" 
                          value="{{ pet.id }}"
                          class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                        >
                        <label for="pet-{{ pet.id }}" class="ml-2 text-gray-700">
                          {{ pet.name }}
                        </label>
                      </div>
                    @end
                  @else
                    <p class="text-gray-500 italic">Not more Pet</p>
                  @end
                </div>
              </div>

              <button 
                type="submit"
                class="bg-emerald-500 text-white px-4 py-2 rounded hover:bg-emerald-600"
              >
                Add pets
              </button>
            </form>

            <form action="{{ route('leaveMeetup', { id: meetup.id }) }}?_method=DELETE" method="POST" class="mt-4">
              {{ csrfField() }}
              <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Leave Meetup</button>
            </form>
          </div>
        @else
          <form action="{{ route('joinMeetup', { id: meetup.id }) }}" method="POST" class="space-y-4">
            {{ csrfField() }}
            
            <div class="mb-4">
              <label class="block text-gray-700 mb-2">Select your pets:</label>
              <div class="space-y-2 border p-4 rounded-md">
                @if(connectUserPet && connectUserPet.length > 0)
                  @each(pet in connectUserPet)
                    <div class="flex items-center">
                      <input 
                        type="checkbox" 
                        id="pet-{{ pet.id }}" 
                        name="petIds[]" 
                        value="{{ pet.id }}"
                        class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                      >
                      <label for="pet-{{ pet.id }}" class="ml-2 text-gray-700">
                        {{ pet.name }}
                      </label>
                    </div>
                  @end
                @else
                  <p class="text-gray-500 italic">Soon your gonna adopt hapiness</p>
                @end
              </div>
            </div>
            <button 
              type="submit"
              class="bg-emerald-500 text-white px-4 py-2 rounded hover:bg-emerald-600"
            >
              Join Meetup
            </button>
          </form>
        @end
      </div>
    </div>
  </div>
</body>
</html>